<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".View.Transaksi_motor_list">

    <LinearLayout
        android:id="@+id/back_ly"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/back"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginEnd="40dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/back_ly">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="TRANSAKSI MOTOR"
            android:textColor="@color/color_2"
            android:textStyle="bold"
            android:textSize="23sp"
            android:gravity="center"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_ly">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="@color/color_3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/back_ly">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Data Motor"
                        android:textColor="@color/color_2"
                        android:textStyle="bold"
                        android:textSize="23sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="150dp"
                            android:layout_height="55dp"
                            android:layout_margin="13sp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tahun_motor_tr_detail_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_2"
                                android:textSize="15sp"
                                android:inputType="none"
                                android:longClickable="false"
                                android:clickable="false"
                                android:textStyle="bold"
                                android:hint="Tahun Motor" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="150dp"
                            android:layout_height="55dp"
                            android:layout_margin="10sp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/warna_motor_tr_detail_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_2"
                                android:textSize="15sp"
                                android:inputType="none"
                                android:longClickable="false"
                                android:clickable="false"
                                android:textStyle="bold"
                                android:hint="Warna Motor" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="150dp"
                            android:layout_height="55dp"
                            android:layout_margin="13sp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/mesin_motor_tr_detail_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_2"
                                android:textSize="15sp"
                                android:inputType="none"
                                android:longClickable="false"
                                android:clickable="false"
                                android:textStyle="bold"
                                android:hint="Mesin Motor" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="150dp"
                            android:layout_height="55dp"
                            android:layout_margin="10sp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/harga_motor_tr_detail_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_2"
                                android:textSize="15sp"
                                android:inputType="none"
                                android:longClickable="false"
                                android:clickable="false"
                                android:textStyle="bold"
                                android:hint="Harga Motor" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="150dp"
                            android:layout_height="55dp"
                            android:layout_margin="13sp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/sus_motor_tr_detail_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_2"
                                android:textSize="15sp"
                                android:inputType="none"
                                android:longClickable="false"
                                android:clickable="false"
                                android:textStyle="bold"
                                android:hint="Suspensi Motor" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="150dp"
                            android:layout_height="55dp"
                            android:layout_margin="10sp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/trans_motor_tr_detail_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_2"
                                android:textSize="15sp"
                                android:inputType="none"
                                android:longClickable="false"
                                android:clickable="false"
                                android:textStyle="bold"
                                android:hint="Transmisi Motor" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        app:errorEnabled="true"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/color_2">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/stok_motor_tr_detail_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_2"
                            android:inputType="none"
                            android:longClickable="false"
                            android:clickable="false"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:hint="Stok Mobil" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="@color/color_3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/back_ly">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_list_tr_motor"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        tools:listitem="@layout/item_transaksi_motor"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>