<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".View.Data_mobil.Update_data_mobil">

    <LinearLayout
        android:id="@+id/back_ly"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/back"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_ly">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/color_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/back_ly">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_1"
                    android:text="EDIT DATA MOBIL"
                    android:gravity="center"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:errorEnabled="true"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/color_1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tahun_mobil_update_data_Tl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_1"
                        android:inputType="number"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:hint="Tahun Mobil" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:errorEnabled="true"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/color_1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/warna_mobil_update_data_Tl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_1"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:hint="Warna Mobil" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:errorEnabled="true"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/color_1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/harga_mobil_update_data_Tl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_1"
                        android:inputType="number"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:hint="Harga Mobil" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:errorEnabled="true"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/color_1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/mesin_mobil_update_data_Tl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mesin Mobil"
                        android:inputType="text"
                        android:textColor="@color/color_1"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:errorEnabled="true"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/color_1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/kapasitas_mobil_update_data_Tl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_1"
                        android:inputType="number"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:hint="Kapasitas Mobil" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/color_1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tipe_mobil_update_data_Tl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_1"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:hint="Tipe Mobil" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:errorEnabled="true"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/color_1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/stok_mobil_update_data_Tl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_1"
                        android:inputType="none"
                        android:longClickable="false"
                        android:clickable="false"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:hint="Stok Mobil" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/color_2"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout
                        android:id="@+id/simpan_updatedata_mobil_ly"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="SIMPAN DATA MOBIL"
                            android:textSize="16sp"
                            android:textColor="@color/color_3"
                            android:textStyle="bold"
                            android:gravity="center"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>